name: Run Jest Tests

on:
  push:
    branches:
      - main  # Change this to your default branch name if it's different

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
      
      - name: Install dependencies
        run: npm install
      
      - name: Run Jest tests
        run: npm test
